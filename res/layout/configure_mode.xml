
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/main_bg" >

        <include
            android:id="@+id/include1"
            android:layout_width="fill_parent"
            android:layout_height="44dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            layout="@layout/topbar" />

        <RelativeLayout
            android:id="@+id/rlsub01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/include1" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_work_mode"
                android:textColor="@color/blue_text_color"
                android:textSize="16sp"
                android:textStyle="bold" android:layout_marginLeft="30dip" android:layout_centerVertical="true"/>

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="37dp" android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rd_ap"
                    android:layout_width="65dip"
                    android:layout_height="31dip"
                    android:checked="true" android:textColor="@color/black" android:text="AP" android:button="@null" android:background="@drawable/btn_left_bg" android:gravity="center"/>

                <RadioButton
                    android:id="@+id/rd_sta"
                    android:layout_width="65dip"
                    android:layout_height="31dip" android:textColor="@color/white" android:text="STA" android:button="@null" android:background="@drawable/btn_right_bg" android:gravity="center"/>
            </RadioGroup>

        </RelativeLayout>

    </RelativeLayout>
