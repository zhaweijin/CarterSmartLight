<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:focusable="true" android:focusableInTouchMode="true">
    
    <ViewFlipper 
        android:id="@+id/viewFlipper1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:scrollbars="vertical" android:layout_gravity="bottom">

        <LinearLayout
            android:id="@+id/rlframe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/popwindow_bg"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_rename"
                    android:textSize="18sp"
                    android:textStyle="bold" android:layout_marginLeft="13dip" android:layout_marginTop="13dip" android:layout_marginBottom="5dip" android:textColor="#FFFFFFFF"/>

                <EditText
                    android:id="@+id/et_device_name"
                    android:layout_width="fill_parent"
                    android:layout_height="44dip"
                    android:layout_marginRight="13dip"
                    android:paddingLeft="10dip" android:layout_marginLeft="13dip" android:textColor="@color/black" android:lines="1" android:singleLine="true" android:maxLines="1" android:maxLength="5"/>

                <LinearLayout
                    android:id="@+id/llssub"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13dip"
                    android:layout_marginTop="15dip" >

                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:layout_marginLeft="13dip"
                        android:layout_marginRight="10dip"
                        android:layout_weight="1"
                        android:textSize="18sp" android:text="@string/button_cancel"/>

                    <Button
                        android:id="@+id/btn_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:layout_marginRight="13dip"
                        android:layout_weight="1"
                        android:textSize="18sp" android:text="@string/button_confirm"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ViewFlipper>
</ScrollView>