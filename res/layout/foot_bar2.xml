<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="52dip">

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/bottom_bar_bg_c"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/btn_controller"
            android:layout_width="100dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_monitor_c_bg"
            android:button="@null"
            android:paddingRight="1dip" />

        <RadioButton
            android:id="@+id/btn_information"
            android:layout_width="102dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_infor_c_bg"
            android:button="@null" />

        <RadioButton
            android:id="@+id/btn_configure"
            android:layout_width="100dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_config_c_bg"
            android:button="@null" />

    </RadioGroup>


</LinearLayout>
